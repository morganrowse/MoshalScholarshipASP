@model IEnumerable<MoshalScholarship.Models.Mentee>

@{
    ViewData["Title"] = "Invites";
}

<h2>Invites</h2>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>
                    User
                </th>
                <th>
                    Sent
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Student.FirstName, @item.Student.LastName
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td>
                        <div class="btn-group btn-group-flex">
                            <a class="btn btn-default btn-sm" asp-action="Details" asp-controller="Students" asp-route-id="@item.Student.FirstName">Details</a>
                            <a class="btn btn-default btn-sm" asp-action="Respond" asp-route-id="@item.ID" asp-route-response="1">Accept</a>
                            <a class="btn btn-default btn-sm" asp-action="Respond" asp-route-id="@item.ID" asp-route-response="0">Reject</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@using Microsoft.AspNetCore.Identity
@using MoshalScholarship.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@{
    ViewData["Title"] = "Home Page";
}



@if (SignInManager.IsSignedIn(User))
{
    <div class="container">
        <div class="btn-group btn-group-justified btn-group-lg">
            <a class="btn-default btn" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            <a class="btn-default btn" asp-area="" asp-controller="Mentors" asp-action="Index">Mentors</a>
            <a class="btn-default btn" asp-area="" asp-controller="Students" asp-action="Index">Students</a>
